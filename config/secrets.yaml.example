# Secrets template for local development and deployment
# Copy to config/secrets.yaml and update with real values.

postgres:
  password: trading_password

redis:
  password: redis_password

auth:
  jwt_secret: change-me

monitoring:
  grafana_admin_password: admin

brokers:
  robinhood:
    username: your_robinhood_username
    password: your_robinhood_password
  oanda:
    api_key: your_oanda_api_key
    account_id: your_oanda_account_id
  coinbase:
    api_key: your_coinbase_api_key
    api_secret: your_coinbase_api_secret
    passphrase: your_coinbase_passphrase

webhooks:
  alert_manager_url: https://example.com/webhook

cloud:
  aws_region: us-east-1
  kms_key_id: your-aws-kms-key-id

# Add any other sensitive configuration values below.
